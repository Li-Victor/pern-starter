{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "server": "cd packages/server && yarn start",
    "client": "cd packages/client && yarn start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "lint:server": "cd packages/server && yarn lint",
    "lint:client": "cd packages/client && yarn lint",
    "lint:all": "yarn lint:server && yarn lint:client",
    "prod:server": "cd packages/server && yarn prod",
    "prod:client": "cd packages/client && yarn build",
    "production": "yarn prod:client && yarn prod:server",
    "heroku-postbuild": "npx babel server -d dist --copy-files && cd client && yarn && yarn run build"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  }
}
